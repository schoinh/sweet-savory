@using SweetSavory.ViewModels;
@using Microsoft.AspNetCore.Identity;
@model RegisterViewModel

@{
  Layout = "_Layout";
}

<h2>New User Registration</h2>

<hr/>

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <label for="UserName">Username: </label>
    @Html.TextBoxFor(user => user.UserName)<br>

    @Html.LabelFor(user => user.Email)
    @Html.TextBoxFor(user => user.Email)<br>

    @Html.LabelFor(user => user.Password)
    @Html.PasswordFor(user => user.Password)<br>

     @Html.LabelFor(user=> user.ConfirmPassword)
    @Html.PasswordFor(user=> user.ConfirmPassword)<br>

    <input type="Submit" value="Register"/>
    <a class="btn btn-outline-info" href="/">Home</a>  
}

<p>@ViewBag.PasswordNotMatch</p>