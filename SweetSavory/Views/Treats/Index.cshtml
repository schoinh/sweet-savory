@using SweetSavory.Models;
@using System.Security.Claims;
@model List<SweetSavory.Models.Treat>

@{
  Layout = "_Layout";
}

<h2>Available Treats</h2>
<hr/>

@if (Model.Any())
{
    <ul>
    @foreach (Treat treat in Model)
    {
        <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId})</li>
    }
    </ul>
} 
else
{
    <h3>No treats have been added yet!</h3>
}

<p>@Html.ActionLink("New Treat", "Create")</p>
<a class="btn btn-outline-info" href="/">Home</a>