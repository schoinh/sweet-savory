@model SweetSavory.Models.Flavor

@{
    Layout = "_Layout";
}

<h2>Are you sure you want to delete this flavor?</h2>
<h4><i>@Html.DisplayFor(model => model.Name)</i></h4>
<hr>
@using (Html.BeginForm())
{
    <input type="submit" class="btn btn-danger" value="Yes, Delete" />
}
<br>
@Html.ActionLink("Cancel", "Edit", new { id = Model.FlavorId })